---
import Logo from "@reusable/atoms/Logo.astro";
import PopLink from "@reusable/atoms/PopLink.astro";
import Wrapper from "@reusable/atoms/Wrapper.astro";
---

<header class="bg-zinc-800 py-4">
	<Wrapper>
		<div class="flex">
			<div class="grow flex items-center gap-8 text-lg">
				<Logo/>
                <hr class="bg-white hidden w-[1px] h-full lg:block">
				<nav class="hidden gap-8 lg:flex">
					<PopLink href="/#contenido">Contenido</PopLink>
					<PopLink href="/#modulos">MÃ³dulos</PopLink>
					<PopLink href="/#preguntas">Preguntas</PopLink>
				</nav>
			</div>
			<div class="flex items-center gap-8">
				<a class="isolate relative group" href="#modulos">
					<div class="bg-pinia-300 text-black p-2 rounded-md group-hover:-translate-x-1 group-hover:-translate-y-1 transition-transform">
						Empieza Ahora
					</div>
					<div class="bg-green-400 absolute inset-0 -z-10 rounded-md"></div>
				</a>
				<button class="w-8 brightness-90">
					<img src="/resource/svg/bookmark.svg" alt="bookmark icon">
				</button>
			</div>
		</div>
	</Wrapper>
</header>
